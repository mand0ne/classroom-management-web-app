@import ../galen-extras/galen-extras-rules.gspec

@objects
    meni .meni
    logo .logo
    sadrzaj .sadrzaj
    tabelaSala .tabelaSala
    headerSprat .headerSprat
    headerRedni .headerRedni
    slobodnaSala .slobodnaSala
    zauzetaSala .zauzetaSala
    sala .sala
    kancelarija .kancelarija

= Skeleton =
    | meni, sadrzaj are aligned vertically above each other with 18px margin

    meni:
        inside screen 40px top, 8px left right

    meni, sadrzaj:
        centered horizontally inside screen 1px

    sadrzaj:
        inside screen 8px left right

= meni elements =
    logo:
        centered horizontally inside meni 1px
        height 40px
        inside meni 52px bottom, 2px top left right

= sadrzaj elements =
    | slobodnaSala, zauzetaSala are aligned vertically above each other with 0px margin

    headerSprat:
        above sala 50px
        inside tabelaSala 1px top right, >= 0px left

    zauzetaSala:
        inside tabelaSala 1px right, >= 0px left

    sala:
        above kancelarija 39px
        inside tabelaSala >= 0px left
        left-of slobodnaSala

    headerRedni:
        inside tabelaSala 51px top, 0px left, >= 1px right

    sala, kancelarija, slobodnaSala, zauzetaSala:
        height 39px
        width 50px

    headerRedni, headerSprat:
        height 50px

    kancelarija:
        inside tabelaSala >= 0px left, >= 1px right

    tabelaSala:
        centered horizontally inside sadrzaj 1px
        inside sadrzaj 22px top bottom

    slobodnaSala:
        below headerSprat 50px
        inside tabelaSala 1px right

